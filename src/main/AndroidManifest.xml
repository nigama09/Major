<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qrcodebasedbussticketbookingsystem">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.hardware.camera" />
    <uses-permission android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QRCodeBasedBussTicketBookingSystem">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.AddBus" />
        <activity android:name=".view.AddStop" />
        <activity android:name=".view.AdminHome" />
        <activity android:name=".view.BookTicket" />
        <activity android:name=".view.DriverLogin" />
        <activity android:name=".view.ListBus" />
        <activity android:name=".view.ListStops" />
        <activity android:name=".view.ListTickets"/>
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.UpdateBusLocation" />
        <activity android:name=".view.UserHome" />
        <activity android:name=".view.ViewBus" />
        <activity android:name=".view.ViewStops" />
        <activity android:name=".view.ViewTickets" />


    </application>

</manifest>